{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} <s:{SourceContext}>{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "/app/project/logs/context-memory-api.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} <s:{SourceContext}> <pid:{ProcessId}> <tid:{ThreadId}>{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithEnvironmentName", "WithMachineName", "WithProcessId", "WithThreadId" ],
    "Properties": {
      "Application": "ContextMemoryStore.Api"
    }
  },
  "AllowedHosts": "*",
  "Project": {
    "Name": "context-memory-store-api",
    "Description": "Context Memory Store API for AI Coding Agents",
    "Version": "1.0.0"
  },
  "Api": {
    "Host": "0.0.0.0",
    "Port": 8080,
    "CorsEnabled": true,
    "RateLimit": 100,
    "TimeoutSeconds": 30
  },
  "Qdrant": {
    "Host": "localhost",
    "Port": 6333,
    "UseHttps": false,
    "CollectionName": "context-memory",
    "VectorSize": 768,
    "ApiKey": null,
    "Distance": "Cosine"
  },
  "Neo4j": {
    "Uri": "bolt://localhost:7687",
    "Username": "neo4j",
    "Password": "contextmemory",
    "Database": "neo4j",
    "ConnectionTimeoutSeconds": 30,
    "MaxConnectionPoolSize": 10
  },
  "Ollama": {
    "BaseUrl": "http://host.docker.internal:11434/v1",
    "ChatModel": "llama3",
    "EmbeddingModel": "mxbai-embed-large",
    "ApiKey": null,
    "TimeoutSeconds": 30,
    "MaxTokens": 4096,
    "Temperature": 0.7
  },
  "Memory": {
    "MaxDocuments": 10000,
    "MaxAgeDays": 0,
    "CleanupIntervalHours": 24,
    "SummaryIntervalMinutes": 60
  },
  "Processing": {
    "SupportedFormats": ["txt", "md", "json", "yaml", "py", "js", "ts", "cs", "go", "rs"],
    "MaxFileSizeMb": 50,
    "ChunkSize": 1000,
    "ChunkOverlap": 200,
    "AutoSummarize": true,
    "MinDocumentLength": 100
  },
  "Prometheus": {
    "Enabled": true,
    "MetricsPath": "/metrics",
    "MetricPrefix": "context_memory",
    "CollectAspNetCoreMetrics": true,
    "CollectSystemMetrics": true,
    "Port": 9090,
    "MetricsIntervalSeconds": 15
  },
  "Performance": {
    "WorkerThreads": 4,
    "BatchSize": 100,
    "ConnectionPoolSize": 10,
    "CacheSize": 1000
  },
  "Features": {
    "McpEnabled": true,
    "RelationshipExtraction": true,
    "ContextualSummarization": true,
    "SemanticSearch": true
  }
}
